{
  "name": "tim-buck2",
  "publisher": "implicit_cast",
  "displayName": "tim-buck2",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.buckconfig"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tim-buck2.selectPlatform",
        "title": "buck2: Select Platform"
      },
      {
        "command": "tim-buck2.selectTarget",
        "title": "buck2: Select Target"
      },
      {
        "command": "tim-buck2.build",
        "title": "buck2: Build"
      },
      {
        "command": "tim-buck2.clean",
        "title": "buck2: Clean"
      },
      {
        "command": "tim-buck2.compileThisFile",
        "title": "buck2: Compile Current File"
      },
      {
        "command": "tim-buck2.launchTargetPath",
        "title": "buck2: Get Launch Target Path"
      }
    ],
    "configuration": {
      "title": "Tim's Buck2 Extension",
      "properties": {
        "tim-buck2.buck2Path": {
          "type": "string",
          "default": "buck2",
          "description": "Path to the buck2 executable"
        },
        "tim-buck2.platformTargetMask": {
          "type": "string",
          "default": "//platforms:",
          "description": "Target mask to use to look up available platforms"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
